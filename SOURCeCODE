		Scanner input = new Scanner(System.in);
		try{
			System.out.println("Enter number of tweets");
			int numtweet = input.nextInt();
			String tweet = "";
			
			tweet = input.nextLine();
			for(int i = 0; i<=numtweet;i++){
				if(numtweet<=0){
					System.out.println("The number of unique hash tags is: 0");
					
					input.close();
				}
				
				}
			
			System.out.println("Enter tweet");
			
	/**
